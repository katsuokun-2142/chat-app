<div class="chat-content">
  <div class="content-header">
    <div class="content-user">
      <!-- 投稿したユーザー名情報を出力する -->
      <%= "#{message.user.name}" %>
    </div>
    <div class="content-dt">
      <!-- 投稿した時刻を出力する -->
      <%= "#{message.created_at}" %>
    </div>
  </div>
  <div class="content-message">
    <!-- 投稿したメッセージ内容を記述する -->
    <%= "#{message.content}" %>
  </div>
</div>
